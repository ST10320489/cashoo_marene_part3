<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Inactive Text Style -->
    <style name="NavTextInactive">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item> <!-- 1.5% letter spacing -->
        <item name="android:textColor">@color/nav_text_inactive</item>
    </style>

    <!-- Active Text Style -->
    <style name="NavTextActive">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:textColor">@color/nav_active</item>
        <item name="android:textStyle">bold</item> <!-- Semi-Bold -->
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14px</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/nav_active</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:backgroundTint">#F2F6E5</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
    </style>




</resources>
