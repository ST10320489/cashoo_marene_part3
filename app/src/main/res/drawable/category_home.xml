<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set a fixed width & height to make it a square.
         Adjust values to match your design. -->
    <size
        android:width="48dp"
        android:height="48dp" />

    <!-- Fill color for the background square -->
    <solid android:color="@color/rose" />

    <!-- Slightly rounded corners (optional); remove if you want a perfect square -->
    <corners android:radius="8dp" />

    <!-- Optional stroke if you want a thin border around the square
         <stroke
            android:width="1dp"
            android:color="@color/gray" /> -->
</shape>